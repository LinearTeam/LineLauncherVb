<Page x:Class="Info"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LineMinecraftLauncher"
      xmlns:muxc="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="关于">
    <Grid Margin="39,0,0,0">
        <muxc:ScrollViewerEx Margin="10, 10, 10, 10">
            <StackPanel Orientation="Vertical">
                <muxc:SettingsExpander Header="Line Minecraft Launcher"
                 Description="Line Minecraft Launcher Ui Preview"
                 Margin="10, 10, 10, 0"
                 VerticalAlignment="Top">
                    <muxc:SettingsExpander.HeaderIcon>
                        <muxc:FontIcon Icon="{x:Static muxc:SegoeFluentIcons.AppIconDefault}" />
                    </muxc:SettingsExpander.HeaderIcon>
                    <muxc:SettingsExpander.Items>
                        <muxc:SettingsCard Header="更新" IsClickEnabled="True">
                            <muxc:SettingsCard.HeaderIcon>
                                <muxc:FontIcon Icon="{x:Static muxc:SegoeFluentIcons.UpdateRestore}" />
                            </muxc:SettingsCard.HeaderIcon>
                        </muxc:SettingsCard>
                    </muxc:SettingsExpander.Items>
                </muxc:SettingsExpander>
                <muxc:SettingsExpander Header="开源信息"
                 Description="查看所有关于 LinearTeam 及本启动器的所有开源信息"
                 Margin="10, 0, 10, 0"
                 VerticalAlignment="Top">
                    <muxc:SettingsExpander.HeaderIcon>
                        <muxc:FontIcon Icon="{x:Static muxc:SegoeFluentIcons.Flag}" />
                    </muxc:SettingsExpander.HeaderIcon>
                    <muxc:SettingsExpander.Items>
                        <muxc:SettingsCard Header="LinearTeam" IsClickEnabled="True" Description="跳转到 Linear Team 的 Github 主仓库">
                            <muxc:SettingsCard.HeaderIcon>
                                <muxc:FontIcon Icon="{x:Static muxc:SegoeFluentIcons.BuildingEnergy}" />
                            </muxc:SettingsCard.HeaderIcon>
                        </muxc:SettingsCard>
                        <muxc:SettingsCard Header="Line Minecraft Launcher Visual Basic .Net" IsClickEnabled="True" Description="跳转到本启动器的 Github 主仓库">
                            <muxc:SettingsCard.HeaderIcon>
                                <muxc:FontIcon Icon="{x:Static muxc:SegoeFluentIcons.Accounts}" />
                            </muxc:SettingsCard.HeaderIcon>
                        </muxc:SettingsCard>
                    </muxc:SettingsExpander.Items>
                </muxc:SettingsExpander>
                <muxc:SettingsCard Header="声明"
                     Description="Minecraft 版权谨归 Mojang Studios 所有。恕开发者不承担因任何使用本软件而造成的侵权行为负责。"
                     Margin="10, 0, 10, 0"
                     VerticalAlignment="Bottom">
                    <muxc:SettingsCard.HeaderIcon>
                        <muxc:FontIcon Icon="{x:Static muxc:SegoeFluentIcons.Warning}" />
                    </muxc:SettingsCard.HeaderIcon>
                </muxc:SettingsCard>
            </StackPanel>
        </muxc:ScrollViewerEx>
    </Grid>
</Page>
